extends: default

rules:
  indentation:
    indent-sequences: consistent
    spaces: 2

  line-length:
    max: 120
    level: warning

  trailing-spaces:
    level: warning

  empty-lines:
    max: 2

  truthy:
    level: warning
    allowed-values: ['true', 'false', 'yes', 'no']

  comments-indentation:
    level: warning
